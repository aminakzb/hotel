@model ProjetGestionHotel1.Models.chambre

@{
    ViewBag.Title = "Create";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-sm-8 offset-sm-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Rooms Adding Form</h4>
                        <p class="card-description">
                            Add a Room to the hotel
                        </p>
                        @using (Html.BeginForm("Create", "chambres", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                    <div class="forms-sample">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div class="form-group row">
                            @Html.LabelFor(model => model.num_chambre, "Room No :", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.num_chambre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.num_chambre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.nom_categorie, "Category Name :", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.DropDownList("nom_categorie", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.nom_categorie, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.ActionLink(" Next", "Create","images",null, new { @class = "btn btn-primary me-2 text-white mdi mdi-arrow-left-bold" })

                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                    </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
